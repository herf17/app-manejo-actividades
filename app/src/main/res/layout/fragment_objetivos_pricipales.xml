<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/detallesProy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="17dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginRight="0dp"
                    android:fontFamily="@font/aclonica"
                    android:gravity="center"
                    android:text="Detalles Proyectos"
                    android:textColor="#FFEB3B"
                    android:textSize="30sp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/detallesProy_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/detallesProy"
                    app:cardBackgroundColor="@android:color/transparent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/nombre"
                            android:layout_width="match_parent"
                            android:layout_height="39dp"
                            android:gravity="center"
                            android:text="TextView"
                            android:textColor="#FFEB3B"
                            android:textSize="20sp"
                            app:fontFamily="@font/aclonica" />

                        <TextView
                            android:id="@+id/fecha"
                            android:layout_width="match_parent"
                            android:layout_height="39dp"
                            android:gravity="center"
                            android:text="TextView"
                            android:textColor="#FFEB3B"
                            android:textSize="20sp"
                            app:fontFamily="@font/aclonica" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/objetivos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/detallesProy_info"
                    android:layout_marginTop="17dp"
                    android:fontFamily="@font/aclonica"
                    android:gravity="center"
                    android:text="Actividades"
                    android:textColor="#FFEB3B"
                    android:textSize="30sp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyobjetivoprinci"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/objetivos"
                    android:layout_marginTop="17dp"
                    android:textColor="#FFEB3B">

                </androidx.recyclerview.widget.RecyclerView>

            </RelativeLayout>

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="match_parent"
                android:layout_height="103dp"
                app:srcCompat="@drawable/qqq" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>