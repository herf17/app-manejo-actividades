<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AgregarPoyecto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foreground="@drawable/dos"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="437dp"
        android:layout_height="678dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-4dp">

        <TextView
            android:id="@+id/proytitap"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:fontFamily="@font/aclonica"
            android:gravity="center_horizontal"
            android:text="Título"
            android:textColor="#FFEB3B"
            android:textSize="30sp"
            app:backgroundTint="#FFD53B" />

        <EditText
            android:id="@+id/proyectoNom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/aclonica"
            android:gravity="center_horizontal"
            android:hint="escribe el título aquí"
            android:inputType="textPersonName"
            android:textColorHint="#FFEB3B" />

        <TextView
            android:id="@+id/proyfechap"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:fontFamily="@font/aclonica"
            android:gravity="center_horizontal"
            android:text="Fecha"
            android:textColor="#FFEB3B"
            android:textSize="30sp"
            app:backgroundTint="#FFD53B" />

        <EditText
            android:id="@+id/proyectoFecha"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:ems="10"
            android:fontFamily="@font/aclonica"
            android:gravity="center_horizontal"
            android:hint="escribe la fecha aquí"
            android:inputType="textPersonName"
            android:textColorHint="#FFEB3B" />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="match_parent"
            android:layout_height="86dp"
            android:src="@drawable/qqq" />
    </LinearLayout>

    <Button
        android:id="@+id/proyenvinuevo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/aclonica"
        android:text="Agregar"
        android:textColor="#000000"
        android:textSize="30sp"
        app:backgroundTint="#FFD53B"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499" />

</androidx.constraintlayout.widget.ConstraintLayout>