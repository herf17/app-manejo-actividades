<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="700dp"
                android:layout_height="700dp"
                app:srcCompat="@drawable/nuevo"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:background="#00BCD4"
                    android:fontFamily="@font/aclonica"
                    android:gravity="center"
                    android:text="Nueva actividad"
                    android:textColor="#000000"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/aclonica"
                    android:gravity="center"
                    android:text="Fecha: "
                    android:textColor="#03A9F4"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/aclonica"
                    android:gravity="center"
                    android:text="Escoge la fecha en el calendario"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <CalendarView
                    android:id="@+id/calen"
                    android:layout_width="match_parent"
                    android:layout_height="354dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginRight="0dp"
                    android:fontFamily="@font/aclonica"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/textVh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="-2dp"
                    android:fontFamily="@font/aclonica"
                    android:gravity="center"
                    android:text="Hora: "
                    android:textColor="#FFEB3B"
                    android:textSize="30sp" />

                <EditText
                    android:id="@+id/hora1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:fontFamily="@font/acme"
                    android:gravity="center"
                    android:hint="escribe la hora aquí"
                    android:textColor="#FFEB3B"
                    android:textColorHint="#FFEB3B"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/actLugar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/aclonica"
                    android:gravity="center"
                    android:text="Lugar: "
                    android:textColor="#FFEB3B"
                    android:textSize="30sp" />

                <EditText
                    android:id="@+id/etlugaract"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:fontFamily="@font/acme"
                    android:gravity="center"
                    android:hint="escribe el lugar aquí"
                    android:textColor="#FFEB3B"
                    android:textColorHint="#FFEB3B"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textUser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17dp"
                    android:fontFamily="@font/aclonica"
                    android:gravity="center"
                    android:text="Colaborador: "
                    android:textColor="#FFEB3B"
                    android:textSize="30sp" />

                <Spinner
                    android:id="@+id/spinner2"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/aclonica"
                    android:gravity="center"
                    android:textColor="#FFEB3B"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/mens"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17dp"
                    android:fontFamily="@font/aclonica"
                    android:gravity="center"
                    android:text="Mensaje:"
                    android:textColor="#FFEB3B"
                    android:textSize="30sp" />

                <EditText
                    android:id="@+id/texto"
                    style="@android:style/Widget.DeviceDefault.Light.EditText"
                    android:layout_width="match_parent"
                    android:layout_height="62dp"
                    android:layout_marginTop="17dp"
                    android:fontFamily="@font/aclonica"
                    android:gravity="center"
                    android:hint="Escriba algún mensaje aquí:"
                    android:textColor="#FFEB3B"
                    android:textColorHint="#FFEB3B"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnguardar"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="55dp"
                        android:layout_marginLeft="101dp"
                        android:layout_marginTop="8dp"
                        android:background="#6776B6"
                        android:backgroundTint="#FFD53B"
                        android:fontFamily="@font/aclonica"
                        android:shadowColor="#8C8A8A"
                        android:text="Guardar"
                        android:textColor="#000000"
                        android:textSize="18sp" />

                    <Button
                        android:id="@+id/btnenviar"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="8dp"
                        android:background="#6776B6"
                        android:backgroundTint="#FFD53B"
                        android:fontFamily="@font/aclonica"
                        android:shadowColor="#8C8A8A"
                        android:text="Enviar"
                        android:textColor="#000000"
                        android:textSize="18sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="match_parent"
                    android:layout_height="102dp"
                    app:srcCompat="@drawable/qqq" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="vertical"></LinearLayout>

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</LinearLayout>